<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/timer"
		/>
	<TextView
		android:id="@+id/MinBufferText"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"/>
	<TextView
		android:id="@+id/ThresholdText"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"/>
	<Button
		android:text="@string/VolumeDialogButtonText"
		android:id="@+id/VolumeDialogButton"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
	<Button
		android:text="@string/StartTimerActvityButtonText"
		android:id="@+id/StartTimerActivityButton"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
</LinearLayout>
